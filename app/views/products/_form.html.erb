<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb-3">
    <%= form.text_field :product_name , class:"form-control" , placeholder: "Ürün Adı" %>
  </div>

  <div class="field mb-3">
    <%= form.number_field :product_price , class:"form-control" , placeholder: "Ürün Fiyatı" %>
  </div>

  <div class="field mb-3">
    <%= form.text_field :product_description , class:"form-control" , placeholder: "Ürün Açıklaması" %>
  </div>

    <div class="field mb-3">
      <%= form.select :brand_id , Brand.all.collect {|num| [num.brand_name , num.id]} , {} , value: Brand.all.map(&:brand_name) , class:"form-control form-select" %>
    </div>

  <div class="actions">
    <%= form.submit class:'btn btn-dark mb-3' %>
  </div>
<% end %>
