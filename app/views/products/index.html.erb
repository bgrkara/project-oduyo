
<h1>Ürün Listesi</h1>

<table class="table table-dark table-striped">
  <thead>
    <tr>
      <th scope="col">Marka</th>
      <th scope="col">Ürün Adı</th>
      <th scope="col">Ürün Fiyatı</th>
      <th scope="col">Ürün Açıklaması</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.brand.brand_name %></td>
        <td><%= product.product_name %></td>
        <td><%= product.product_price %></td>
        <td><%= product.product_description %></td>
        <td class="table-a"><%= link_to 'Göster', product %></td>
        <td class="table-a"><%= link_to 'Düzenle', edit_product_path(product) %></td>
        <td class="table-a"><%= link_to 'Sil', product, method: :delete, data: { confirm: 'Emin misiniz?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Yeni Ürün Ekle', new_product_path , class:"btn btn-warning" %>
